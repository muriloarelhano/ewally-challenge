{
  "name": "ewally-challenge",
  "version": "1.0.0",
  "description": "Ewally Challenge",
  "main": "dist/app/http/index.js",
  "scripts": {
    "start:http": "node dist/app/http/index.js",
    "start:dev": "nodemon --watch src/ --exec ts-node src/app/http/index.ts -e ts",
    "test": "tsc && jest tests --colors",
    "clean": "rimraf dist/",
    "build": "npm run clean && tsc",
    "lint": "eslint src/ tests/"
  },
  "jest": {
    "roots": [
      "tests/"
    ],
    "verbose": true,
    "bail": 1,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "!node_modules/**",
      "!dist/**",
      "!src/app/http/rest/**/*",
      "!src/app/http/index.ts",
      "!src/app/context.ts",
      "!tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 70,
        "statements": 70,
        "branches": 70,
        "functions": 70
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.13.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "redis-mock": "^0.56.3",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@tsconfig/node16": "^1.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "pg": "^8.7.3",
    "redis": "^4.0.6",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.5"
  }
}
